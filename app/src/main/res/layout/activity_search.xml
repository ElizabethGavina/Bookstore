<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bezch2"
    android:orientation="vertical"
    tools:context="izenka.hfad.com.bookstore.view.book_list.BookListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color9"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:layout_gravity="left|center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/return_back"
            android:backgroundTint="@color/bootstrap_brand_secondary_fill" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/bezch"
            android:hint="@string/input_search"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/bezch"
            android:textCursorDrawable="@null"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnDeleteInput"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/cross"
            android:backgroundTint="@color/red2" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/boarders">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <GridLayout
                android:id="@+id/gridLayoutSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"></GridLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
